            </div>
            <div class="form-group">
                <label asp-for="PubYear" class="control-label"></label>
                <input asp-for="PubYear" class="form-control" />
                <span asp-validation-for="PubYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenId" class="control-label"></label>
                <select asp-for="GenId" class="form-control" asp-items="ViewBag.GenId"></select>
                <span asp-validation-for="GenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>
                <span asp-validation-for="Id" class="text-danger"></span>
